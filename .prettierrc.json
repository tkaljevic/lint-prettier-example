{
	"printWidth": 80,
	"singleQuote": true,
	"useTabs": true,
	"tabWidth": 2,
	"semi": true,
	"trailingComma": "all",
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"plugins": ["prettier-plugin-organize-imports"],

	"importOrder": ["^@?//w", "^[./]"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,

	"overrides": [
		{
			"files": "*.html",
			"options": {
				"parser": "angular"
			}
		}
	]
}
